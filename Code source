#include <Arduino.h>
#include <U8g2lib.h> // library for drawing images to the OLED display
#include <Wire.h> // library requires for IIC communication

U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, /* reset=*/ U8X8_PIN_NONE); // initialization for the used OLED display


//COPY AND PASTE THE IMAGE HERE










//COPY AND PASTE THE IMAGE HERE


int frame; // which image to display on the display

void setup(void) {

  Wire.begin(SDA, SCL); // e.g., Wire.begin(3, 4)

  u8g2.begin(); // start the u8g2 library
}


void loop(void) { // main loop

  frame++; // increase the frame number
  if (frame >= 90) {frame = 0;} // 90 here is the number of frame, if your animation is 120 frames, then change the 90 to 120

  u8g2.clearBuffer();					// clear the internal memory
  u8g2.drawXBMP(0, 0, 128, 64, epd_bitmap_allArray[frame]); // draw fullscreen image generated by image2cpp website
  u8g2.sendBuffer();					// transfer internal memory to the display

}

